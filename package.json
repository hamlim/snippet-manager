{
  "name": "snippet-manager",
  "type": "module",
  "private": true,
  "server": "dist/server.js",
  "source": "src/server.tsx",
  "targets": {
    "server": {
      "context": "react-server",
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "dev": "concurrently \"bun watch\" \"bun start\"",
    "clean": "rm -rf dist/{client,server*}",
    "watch": "parcel watch",
    "start": "wrangler dev",
    "build": "yarn clean && parcel build"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.8",
    "@types/bun": "latest",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6",
    "concurrently": "9.1.2",
    "parcel": "2.15.2",
    "postcss": "8.5.4",
    "tailwindcss": "4.1.8",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@parcel/rsc": "2.15.2",
    "hono": "4.7.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "wrangler": "4.19.1"
  }
}
